<!DOCTYPE html>
<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.12/angular-material.min.css">
</head>

<body ng-app="app" ng-cloak>

	<div ng-controller="ctrl" layout="column" ng-cloak class="md-inline-form">
		<md-content layout-padding>

			<% include ./partial/messages %>

			<form class="form" action="/register" method="POST">

				<md-input-container class="md-block">
					<label>Nome</label>
					<input type="text" name="nome" ng-model="user.nome">
				</md-input-container>

				<md-input-container class="md-block">
					<label>Sobrenome</label>
					<input type="text" name="sobrenome" ng-model="user.sobrenome">
				</md-input-container>

				<md-input-container class="md-block">
					<label>Email</label>
					<input type="text" name="email" ng-model="user.email">
				</md-input-container>

				<md-input-container class="md-block">
					<label>Senha</label>
					<input type="password" name="senha" ng-model="user.senha">
				</md-input-container>

				<md-button type="submit"> CADASTRAR </md-button>

			</form>
		</md-content>
	</div>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.6/angular.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.6/angular-animate.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.6/angular-aria.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.6/angular-messages.min.js"></script>


	<script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.12/angular-material.min.js"></script>

	<script type="text/javascript">

		angular
			.module('app', ['ngMaterial', 'ngMessages'])
			.controller('ctrl', ($scope) => {
				$scope.user = {}
			})
	</script>

</body>

</htmla>